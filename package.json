{
	"name": "domia-website",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "eslint .",
		"format": "prettier --check \"src/**/*.{ts,tsx}\"",
