		"@vercel/analytics": "^1.6.1",
		"@vercel/speed-insights": "^1.3.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.561.0",
		"next": "16.0.10",
		"next-sitemap": "^4.2.3",
		"next-themes": "^0.4.6",
		"nodemailer": "^7.0.11",
		"react": "^19.2.3",
